
@model Jobs4Developers.Models.RegisterViewModel


@{
    ViewBag.Title = "Register";
    var listRoles = new List<SelectListItem>()
        {
            new SelectListItem {Text = "Entreprise",   Value = "1"},
            new SelectListItem {Text = "Developers", Value = "2"}
        };

        }

<h2 >@ViewBag.Title.</h2>
<hr />
<section id="loginForm" style="height:410px;">
    <div style="height:30px"></div>
    <h4 class="col-md-offset-5">Create a new account.</h4>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal col-md-offset-3", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.idRoles, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.idRoles, listRoles, "--Select your role--", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.idRoles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default col-md-10" value="Register" />
            </div>
        </div>
    }
    </section>
  
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
